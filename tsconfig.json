{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "outDir": "./dist/esm",
        "declaration": true,
        "declarationMap": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}